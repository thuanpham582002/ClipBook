{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ClipBook",
  "version": "0.1.0",
  "identifier": "com.ikryanov.clipbook",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run build:frontend",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "ClipBook",
        "width": 400,
        "height": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "minWidth": 300,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
